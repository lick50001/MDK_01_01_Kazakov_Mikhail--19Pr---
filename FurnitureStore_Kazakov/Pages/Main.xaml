<Page x:Class="FurnitureStore_Kazakov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureStore_Kazakov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="780"
      Title="Main">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/FurnitureStore_Kazakov;component/Image/background.jpg"/>
        </Grid.Background>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Background" Value="#FF69DE32"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="BorderBrush" Value="#FFABAD83"/>
            </Style>
        </Grid.Resources>

        <Grid VerticalAlignment="Top" Height="50" Background="#7F000000">
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
            </Grid.Resources>

            <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Source="/FurnitureStore_Kazakov;component/Image/vk.png"/>
            <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,10,0,0" Source="/FurnitureStore_Kazakov;component/Image/telegramm.png"/>
            <Label Content="Мебель по комнатам" Margin="140, 5, 140, 5" Foreground="#FFFFFFFF" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" FontSize="20" FontWeight="Bold" />
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="125" Height="25" Margin="0, 10, 10, 0" Content="Корзина (0)"/>
        </Grid>

        <ScrollViewer Margin="5, 55, 5, 5" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="parent" Orientation="Horizontal">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
